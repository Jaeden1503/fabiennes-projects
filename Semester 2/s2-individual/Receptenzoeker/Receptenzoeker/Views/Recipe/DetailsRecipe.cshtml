@model Receptenzoeker.Models.RecipeViewModel

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/site.css" rel="stylesheet" id="bootstrap-css">


<div class="dashboardlist">
    <h4 class="greenbold">Recept details</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h2 class="greenbold">@Model.ID: @Model.Name</h2>

            <p class="recipeitems" style="padding: 12px 0px 0px;"><strong>@Html.DisplayNameFor(model => model.Category)</strong> @Model.Category</p>
            <p class="recipeitems"><strong>@Html.DisplayNameFor(model => model.Type)</strong> @Model.Type</p>
            <p class="recipeitems"><strong>@Html.DisplayNameFor(model => model.PreparationTime)</strong> @Model.PreparationTime min.</p>
            <p class="recipeitems"><strong>@Html.DisplayNameFor(model => model.PersonAmount)</strong> @Model.PersonAmount</p>

            <p class="recipeitems"><strong>@Html.DisplayNameFor(model => model.RecipeIngredientVMs)</strong></p>
            <p>
                @foreach (var item in Model.RecipeIngredientVMs)
                {
                    <div class="purplebold">
                        @Html.DisplayFor(model => item.Quantity)
                        @Html.DisplayFor(model => item.QuantityUnit)
                        @Html.DisplayFor(model => item.IngredientVM.IngredientName)
                    </div>
                }
            </p>
        </div>

        <div class="col-md-6 text-center two-thirdpadding">
            <p class="recipeitems"><strong>@Html.DisplayNameFor(model => model.PreparationMethod)</strong></p>
            <p>
                @Model.PreparationMethod
            </p>
        </div>

    </div>

    <div>
        <a asp-action="ListAllRecipes">Terug naar alle recepten</a>
    </div>
</div>

