@{
    ViewData["Title"] = "AddIngredient";
}

@model IngredientViewModel

<link href="~/css/site.css" rel="stylesheet" id="bootstrap-css">


<div class="dashboardlist">
    <h2 class="greenbold">Hier kan een ingrediënt worden toegevoegd</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Ingredient">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IngredientName" class="control-label"></label>
                    <input asp-for="IngredientName" class="form-control" />
                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-action="AddIngredient" type="submit" value="Toevoegen" class="btn purplebutton" />
                </div>
            </form>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
